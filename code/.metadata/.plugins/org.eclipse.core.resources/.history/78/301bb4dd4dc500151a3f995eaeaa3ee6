package models.entidades;

import org.bson.types.ObjectId;

public class Usuario {
	public Plan plan;
	@Id
	private String _id;
	public String nombre;
	
	public String getNombre() {
		if(this.nombre == null){
			return "(not set)";
		} else {
			return nombre;
		}
	}
	
	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public String getId() {
		if(this._id == null){
			return "(none)";
		} else {
			return this._id.toHexString();
		}
	}
}
