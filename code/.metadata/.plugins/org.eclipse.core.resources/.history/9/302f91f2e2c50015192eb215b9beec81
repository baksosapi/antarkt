	public Promise<Result> findById(String id){
		Promise<Usuario> aa = usuarios.findById(id);
		System.out.println("waiting for user");
		return aa.map( (u) -> Results.ok( u.nombre ) );
	}
	
	public Promise<Result> findByName(String name){
		Promise<Usuario> aa = usuarios.findById(id);
		System.out.println("waiting for user");
		return aa.map( (u) -> Results.ok( u.nombre ) );
	}
	
